{
	"compilerOptions": {
		"outDir": "build",
		"module": "esnext",
		"target": "es6",
		"lib": [
			"es6",
			"dom",
			"es2015",
			"es2015.iterable",
			"es2016",
			"es2017"
		],
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react",
		"declaration": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}